<Styles>
	<Style name="Article Title" element="H4">
		<Attribute name="style" value="text-align: left;font-size: 16px;padding: 0;color: #062F56;font-family: Georgia, Verdana, Arial, Helvetica, sans-serif;font-weight: bold;text-decoration:none;" />
	</Style>
	<Style name="Article Author" element="H5">
		<Attribute name="style" value="text-align: left;font-size: 11px;padding: 0;color: #7F5842;font-weight: bold;font-family: Georgia, Verdana, Arial, Helvetica, sans-serif;" />
	</Style>
	<Style name="Article Date" element="H6">
		<Attribute name="style" value="text-align: left;font-size: 12px;padding: 0;color: #4C4C4C;font-weight: bold;font-family: Arial, Verdana, Arial, Helvetica, sans-serif;" />
	</Style>
	<Style name="Plain text" element="p">
		<Attribute name="style" value="line-height: 120%;padding: 0 0 10px 0;color: #000;font-weight: normal;font-size: 11px;border: 0;margin: 0;" />
	</Style>
